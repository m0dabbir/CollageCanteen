<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Character encoding for the document -->
    <meta charset="UTF-8" />

    <!-- Ensures compatibility with Internet Explorer -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Makes the website responsive on all devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Title of the webpage shown on the browser tab -->
    <title>JMI College Portal</title>

    <!-- Linking external CSS file for styling -->
    <link rel="stylesheet" href="/css/home.css" />
  </head>

  <body>
    <!-- Navigation bar at the top of the page -->
    <nav class="navbar">
      <!-- JMI logo on the left -->
      <img src="images/LOGOjmi.png" alt="JMI Logo" />

      <!-- Navigation links in the center -->
      <div class="nav-links">
        <a href="/about">About</a>
        <a href="https://www.jmi.ac.in/" target="_blank">University</a>
        <a href="/developers">Developers</a>
      </div>

      <!-- Food logo on the right -->
      <img src="images/LOGOfood.png" alt="Food Logo" />
    </nav>

    <!-- Main content section of the homepage -->
    <main class="main-content">
      <!-- Grid layout for clickable options -->
      <div class="options-grid">
        <!-- Canteen option card -->
        <div class="option-card" onclick="window.location.href='/canteens'">
          <h2>Canteen</h2>
          <p>Explore our canteens</p>
        </div>

        <!-- Stationary option card -->
        <div class="option-card" onclick="window.location.href='/stationary'">
          <h2>Stationary</h2>
          <p>Find all your stationary needs</p>
        </div>

        <!-- Tender notices option card -->
        <div class="option-card" onclick="window.location.href='/tender'">
          <h2>Tender</h2>
          <p>View tender notices</p>
        </div>
      </div>
    </main>

    <!-- Footer section at the bottom -->
    <footer class="footer">
      <div class="footer-content">
        <!-- Clock display -->
        <div id="clock"></div>

        <!-- Visitor count display -->
        <div id="count"></div>
      </div>
    </footer>

    <!-- External JavaScript for dynamic counter and clock -->
    <script src="/scripts/counter.js"></script>
  </body>
</html>
